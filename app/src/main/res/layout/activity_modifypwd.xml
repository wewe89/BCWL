<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_actionbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_oldpwd"
            style="@style/FromLinearEdittext"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@mipmap/ic_password"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true" />


        <EditText
            android:id="@+id/et_newpwd"
            style="@style/FromLinearEdittext"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@mipmap/ic_password"
            android:hint="新密码，长度6-20，区分大小写"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true" />
        <EditText
            android:id="@+id/et_renewpwd"
            style="@style/FromLinearEdittext"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@mipmap/ic_password"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true" />

        <Button
            style="@style/ButtonCommonStyle"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:onClick="doModify"
            android:text="修改" />
    </LinearLayout>
</LinearLayout>